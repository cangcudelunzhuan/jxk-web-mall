.schedule_content
  padding:10px
  text-align: center
  height:50px
  line-height: 20px

.schedule_money
  font-size: 16px
  color: #F9522E
  font-weight: bold
  text-align: center

.schedule_volume_count
  font-size: 12px
  color:#999
  text-align: center
  position: absolute
  width:100%
  height:20px
  left:0
  bottom:5px



.schedule_sign
  position: absolute
  left:0
  bottom: 0
  width:100%
  height:60px
  background-color: #F9522E
  border:1px solid #F9522E
  >div
    float: left
    height:100%
    position: relative
  i
    color:#F9522E
    display: flex
    position: absolute
    width: 100%
    height: 100%
    top: 0
    left :0
    align-items: center
    justify-content: center

  button
    background-color: transparent
    color:white
    height:100%
    width:100%
    border:none
    cursor pointer
    outline: none
  >div:first-child
    width:25%
    padding-top:18px
    text-align: center
    background-color:white
    cursor pointer
  >div:last-child
    width:75%


.sche_item_box
  position: relative
  width: 166px
  height 356px
  overflow:hidden
  z-index :0
  .sche_item_default_box
    position: absolute
    left: 0
    top: 0
    transition:  all 0.3s ;
    -moz-transition: all 0.3s;
    width: 100%
    height:100%

.sche_item_box:hover
  .sche_item_default_box
    transform: rotateY(180deg)
    -moz-transform:rotateY(180deg)
    -webkit-transform:rotateY(180deg)
    -o-transform:rotateY(180deg)
    opacity :0
  .schedule_hover
    transform: rotateY(0deg)
    -moz-transform:rotateY(0deg)
    -webkit-transform:rotateY(0deg)
    -o-transform:rotateY(0deg)
    opacity:100

.hover_title
      font-size: 14px
      color: #ffffff
      margin-bottom: 15px
      p 
        margin-top: 10px
:global
