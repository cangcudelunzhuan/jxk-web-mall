$pageWidth = 1190px;

.schedule_hover
  // display: none
  background-color: rgba(0,0,0,.8)
  position: absolute
  left: 0
  top: 0
  width:100%
  height:100%
  color:white
  padding:20px 15px
  font-size: 12px
  transition:  all 0.3s
  -moz-transition: all 0.3s
  transform: rotateY(180deg)
  -moz-transform:rotateY(180deg)
  -webkit-transform:rotateY(180deg)
  -o-transform:rotateY(180deg)
  opacity: 0



ol,ul
