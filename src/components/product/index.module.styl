.hover_box
  position: absolute
  height: 100%
  width: 100%
  top: 0
  // left: 100%
  left :0
  opacity :0
  z-index: 999
  color: #fff
  transition:  all 0.3s;
  transform: rotateY(180deg);
  .hover_inner
    padding: 20px
    color: #fff
    font-size: 14px
    .hover_title
      font-size: 18px
      color: #ffffff
      margin-bottom: 15px
    p
      font-size: 14px
  .btn_box
    position: absolute
    bottom: 0
    left:0
    display: flex
    width: 100%
    span, a
      padding: 20px 0
      flex: 1 50%
      font-size: 16px
      line-height: 16px
      text-align: center
      background: #ffffff
      border: 1px solid #F9522E
      color: #F9522E
      cursor: pointer
    span:nth-child(2)
      color: #ffffff
      background: #F9522E
    .gray
      background: #dddddd
      color: #ffffff
      border-color: #dddddd
.hover_box:after
  position: absolute
  content: ''
  background: #000000
  height: 100%
  width: 100%
  opacity: 0.7
  top: 0
  left: 0
  z-index:-1
.product_item:hover 
  .hover_box
    // left :0
    // transform: skew(0deg, 360deg);
    transform: rotateY(0deg);
    opacity:100
  .default_info_box
    // left: -100%
    transform: rotateY(180deg);
    opacity:0
