.product_item
  width: 280px
  margin: 10px 12px
  box-shadow:0px 0px 20px 0px rgba(0,0,0,0.15);
  position: relative
  height:422px 
  overflow: hidden
  .default_info_box
    position: absolute
    top: 0
    left :0
    width: 100%
    height 100%
    transition:  all 0.3s;
  .img_box
    position: relative
    width: 100%
    img 
      width: 100%
      height: 187px
      display: block    
  .seckill_selltime
    position: relative
    left 0
    // bottom: 26px
    text-align: center
    width: 100%
    text-align: center
    color: #fff 
    z-index :99
    padding: 7px 0
    font-size: 12px
    line-height: 12px
  .seckill_selltime:after 
    position: absolute
    content: ''
    background: #000000
    opacity :0.3
    width: 100%
    left:0
    bottom: 0
    z-index :-1
    height 100%

.oneByOne
  height:512px
  .img_box
    position: relative
    z-index 1
    img
      height:280px
    .has_no
      width: 100%
      height 100%
      position: absolute
      left 0
      top: 0
      z-index 2
      background: #000000
      opacity 0.5
.info_box
  position: relative
  padding: 0 20px 20px 20px
  margin-top: 10px
  .title
    font-size: 16px
    line-height: 16px
    height: 34px
    overflow: hidden
    width: 100%
  .message
    font-size: 12px
    color: #999
    margin-top: 15px
    height: 32px
    overflow:hidden
  .price_box
    display: flex
    align-items: flex-end
    margin: 15px 0
    .price_num
      font-size: 32px
      line-height: 32px
      margin-right: 5px
  .small_price_box
    flex-direction: column
    align-items: flex-start
    .price_num
      font-size: 20px
      line-height: 20px
  .small_p
    font-size: 10px
    color: #999
    letter-spacing: -1px
  .small_p+.small_p
    margin-top: 5px
