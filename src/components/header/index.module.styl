.header
  background-color:white

.header_content
  width:1190px
  margin-left:auto
  margin-right:auto
  padding-top:20px
  padding-bottom:20px
  font-size: 16px
  height:118px

.web_search_box
  border:1px solid #F9522E
  border-radius:20px
  overflow hidden
  input,button
    vertical-align: middle
    outline: none
    height:40px
    line-height: 40px
    border:none
  input
    padding-left:15px
    padding-right:15px
    width:calc(100% - 100px)
    color:#565656
  button
    background-color: #F9522E
    color: white
    width:100px
    cursor pointer

.r_box
  text-align: right
  display: flex
  justify-content: flex-end
  align-items: center
  cursor:pointer
  span
    vertical-align: middle
  a
    color:#333
    vertical-align: middle
    margin-right:15px
    display: flex
    align-items: center
    &:first-child
      display: inline-block
  .rl_box
    display: flex
    align-items: center
    margin-left: 10px
    margin-right: 10px

.logolink
  display: inline-block
  cursor: pointer
  img
    width: 180px


.menus
  padding-top:20px
  padding-bottom:30px
  position: relative
  display: flex
  align-items: center
  justify-content: space-between
  .menu_items
    color:#333
    display: inline-block
    margin-right:15px
    position relative
    cursor: pointer
    &:hover,.active
      color:#F9522E
  .menu_active
    color: #F9522E

  

.first_menu
  color:#F9522E
  position: absolute
  // left:15px
  bottom:17px
  transition: all .3s


.drop_menu
  border:2px solid #F9522E
  padding:20px
  position:absolute
  top:118px
  z-index:1002
  background-color: white
  transition: left 1s ease 0s
  width:472px
  &:before
    content:''
    position: absolute
    width:60px
    height:10px
    left:0
    top:-10px

.drop_menu_htitle
  color:#F9522E
  font-weight: bold
  font-size: 16px

.catalog_items
  padding:3px 4px
  :hover
    color:#F9522E
    text-decoration: underline

.catalog_2items
  color:#F9522E
.goto_admin
  background: #F9522E
  color: #fff
  padding: 7px 10px
  border-radius:4px 
  font-size: 16px
  line-height: 16px
  cursor: pointer
  transition: all 0.5s
.goto_admin:hover
  background: #ff6746


:global
  a, .ant-dropdown-link:hover
    color: #ff6746
  .ant-dropdown-menu-item:hover, .ant-dropdown-menu-submenu-title:hover
    background-color: #ffece6
