$pageWidth = 1190px;

.box_title
  padding-bottom:7px
  position: relative
  margin-top: 30px
  .r_box
    float: right

.box_title_label
  font-weight: bold
  font-size: 20px
  vertical-align: middle
  margin-left:10px
  margin-right:20px

.more_link
  color:#999
  margin-left:30px

.aside_more
  position: absolute
  border:1px solid white
  width:126px
  height:36px
  color:white
  text-align: center
  line-height:36px
  left:50%
  margin-left:-63px
  bottom: 20px
  font-size: 14px
  &:hover
    color:white

.purchase_box
  width:$pageWidth
  margin-left: auto
  margin-right:auto
  margin-bottom: 20px

.purchase_content
  height:697px
  background-color:white

.purchase_aside
  width:290px
  height:100%
  padding:20px
  position: relative
  float: left
  display: inline
  color: white
  h3
    font-size:36px
    color: white
    font-weight: bold

.purchase_list
  width:900px
  height:100%
  float: left
  display: inline
  border-top:1px solid #EBEBEB

.purchase_items
  position: relative
  float: left
  display inline
  width:33.333333%
  height:232px
  padding:10px
  border-bottom:1px solid #EBEBEB
  border-right:1px solid #EBEBEB
  &:hover
    box-shadow: 0 0 6px #ccc

  h4
    color:#333
    font-size: 16px
    margin-top:15px
    width:158px

.purchase_tag
  label
    display: inline-block
    font-size: 12px
    color:#999
    border-radius:3px
    border:1px solid #DBDBDB
    margin-right:10px
    padding:0 5px

.purchase_spec
  color:#999
  padding-top:10px
  padding-bottom:15px
  width:152px
  font-size: 12px

.purchase_img
  position:absolute
  right:15px
  top:40px
  width:110px
  height:110px
  img
    width:100%
    height:100%
.has_no 
  position:absolute
  right:15px
  top:40px
  width:110px
  height:110px
  z-index 9
  background: #000000
  opacity 0.5
.purchase_price
  position: absolute
  width:268px
  left:15px
  bottom:5px

.purchase_price_box
  display: flex
  flex-direction: column
  color:#333
  font-size: 12px
  letter-spacing: -0.5px
  .inner
    display: flex
    align-items: flex-end
    .price_num
      font-size: 26px
      color:#f9522e
      line-height: 26px
      margin-right: 5px
  .gray_font
    font-size: 12px
    color:  #999999
    margin-top: 5px


.purchase_suggest
  display: flex
  justify-content: space-between
  color:#999
  font-size: 12px

.purchase_hover
  position:absolute
  left:0
  bottom:0
  z-index:5
  width:100%
  height:60px
  border:1px solid #F9522E
  background-color: #F9522E
  display: none
  a, span
    display: block
    height:100%
    text-align: center
    line-height: 60px
    text-align: center
    flex:1
    color:white
    cursor:pointer
  a:first-child
    color:#F9522E
    background-color: white
.gray
  background-color: #dddddd
  color: #ffffff
  border-color: #dddddd
  a:first-child
    background-color: #dddddd
    color: #ffffff

.purchase_items:hover .purchase_hover
  display: flex

.purchase_aside_bg
  background:linear-gradient(192deg,rgba(31,99,226,1) 0%,rgba(1,150,255,1) 100%)


// 9元专区
.prefecture_aside_bg
  background:linear-gradient(192deg,rgba(255,70,70,1) 0%,rgba(255,49,169,1) 100%)

// 大牌制造直供
.major_aside_bg
  background:linear-gradient(192deg,rgba(190,70,255,1) 0%,rgba(167,49,255,1) 100%)

