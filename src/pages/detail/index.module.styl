$pageWidth = 1190px;


.out_box
  width: 100%
  border-top:1px solid #f5f5f5
  padding-top: 40px
  background: #fff
.wrapper
  width: $pageWidth;
  margin: 0 auto


.title_box, .title_left, .title_right
  display: flex
  align-items: center
.title_box
  justify-content: space-between
.title_left
  h3 
    font-size: 18px
  .tag
    background: rgba(254,216,208,1)
    font-size: 10px
    color: #F9522E
    padding: 4px 7px
    border-radius: 2px
    margin-left:  16px
.title_right
  color: #999999
  span 
    margin-left: 25px

.swiper_box
  display: flex
.detail_out_box
  margin-top: 16px
.sweiper_inner_box
  width: 380px
.hot_box
  width: 100%
  border: 1px solid #f0f5f2
  border-top:0 
  .title
    background: #F9522E
    font-size: 14px
    color: #fff
    line-height: 14px
    padding: 13px
    text-align: center
    margin-bottom: 40px
  .hot_item
    padding: 0 40px
    cursor: pointer
    img
      width: 100%
      height:300px
      display: block
      background: #fff
    .hot_bottom
      display: flex
      align-items: center
      justify-content: space-between
      margin-top: 10px
      font-size: 12px
      font-weight: 400
      margin-bottom: 10px
  .hot_item+ .hot_item
    margin-top: 15px
.red
  color: #F9522E


.product_box
  margin-left: 16px

.props_box
  display: flex

.top_left
  width: 640px


.down_button_box
  width: 100%
  margin-bottom: 20px
  :global
    .ant-btn
      width: 100%
.detail_box
  margin-top: 20px
  :global
    .ant-tabs-nav-wrap
      background: #F5F5F5
      border: 1px solid #f5f5f5
      border-top: 0 
    .ant-tabs-nav .ant-tabs-tab:hover 
      color: #F9522E
    .ant-tabs-nav .ant-tabs-tab-active
      color: #333
      background: #ffffff
    .ant-tabs-ink-bar
      background-color: #F9522E
      top:1px



      
