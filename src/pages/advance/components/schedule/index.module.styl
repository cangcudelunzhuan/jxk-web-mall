$pageWidth = 1190px;

.box_title
  padding-bottom: 15px
  position: relative
  .r_box
    float: right

.box_title_label
  font-weight: bold
  font-size: 20px
  vertical-align: middle
  margin-left:10px
  margin-right:20px

.more_link
  color:#999
  margin-left:30px


.schedule
  padding-top:20px
  padding-bottom:30px
  width:$pageWidth
  margin-left:auto
  margin-right:auto
  ol,ul
    background-color: white
    &:after
      content:'\20'
      clear:both
      display:block
      overflow:hidden

  li{
    width:14.285714%
    border-left:1px solid #EBEBEB
    &:first-child{
      border-left: none
    }
  }
  ol
    font-size: 16px
    li
      height:50px
      line-height: 50px
      color:#333
      text-align: center
      float:left

  ul
    width:170px
    li
      // height:306px
      width: 100%
      position: relative
      &:hover
        .schedule_hover
          display: block


