$pageWidth = 1190px;

.wrapper
  width: $pageWidth;
  margin: 0 auto

.title
  font-size: 22px
  margin-top: 40px
.table_box
  margin-top: 15px
  border-top:1px solid #EEEEEE
  :global
    .ant-table-tbody
      background: #fff
      font-size: 12px
    .ant-table-thead > tr > th
      font-size: 12px
      color: #999999
      font-weight: 400 
    .ant-table-row
      cursor:pointer
    .ant-table-tbody > tr:hover > td
      background: #f3e0dc!important
    .ant-checkbox-checked::after
      border: 1px solid #F9522E
    .ant-checkbox-checked .ant-checkbox-inner
      background-color: #F9522E;
      border-color: #F9522E;
    .ant-checkbox-indeterminate .ant-checkbox-inner::after
      background-color: #F9522E;
    .ant-checkbox-wrapper:hover .ant-checkbox-inner, 
    .ant-checkbox:hover .ant-checkbox-inner, .ant-checkbox-input:focus + .ant-checkbox-inner
      border-color:  #F9522E
  .props_box
    margin-top: 15px
    display: flex
    span + span 
      margin-left: 20px
.table_tool
  padding: 22px
  background: #EAE9E7
  font-size: 12px
  color: #999999
  display: flex
  margin: 30px auto
  position: relative
  .right_box
    position: absolute
    right:0;
    top: 0
    height:100%
    display: flex
    align-items: center
    color: #333
    .btn
      height :100%;
      background: #F9522E
      font-size: 20px
      color: #ffffff
      width: 130px
      text-align: center
      display: flex
      align-items: center
      justify-content: center
      cursor: pointer
      margin-left: 30px   
    .red
      font-size: 16px
      margin-left: 20px
      margin-right: 5px
  :global
    .ant-checkbox-wrapper
      font-size: 12px
      color: #999

.price_box
  line-height: 12px
  // text-align: right 
.hotTag
  background: linear-gradient(270deg,rgba(255,1,136,1) 0%,rgba(137,31,226,1) 100%);
  padding: 3px 5px
  color: #fff
  cursor: pointer
.red
  color: #F9522E
.green
  color: #20AC30
.hasline
  text-decoration: underline
  cursor:pointer

