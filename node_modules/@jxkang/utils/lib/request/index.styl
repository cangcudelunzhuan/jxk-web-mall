/* 数据请求过程中的一些弹框提示, loading样式 */
@css{
@keyframes fetch-loading-cover{from{transform:rotate(0)}to{transform:rotate(359deg)}}
#fetch-msg-tip{position:fixed;left:0;top:0;right:0;bottom:0;background-color:rgba(0,0,0,0.2);z-index:999990;}
#fetch-err-tip{position:fixed;width:345px;height:75px;left:0;top:0;right:0;bottom:0;margin:auto;box-shadow:0 0 10px #ccc;background-color:white;z-index:999990;}
#fetch-msg-tip .popup-box{position:absolute;width:380px;height:145px;overflow:hidden;margin:auto;background-color:white;left:0;top:0;right:0;bottom:0;border:1px solid #ccc;border-radius:5px;}
#fetch-msg-tip .dialog-title{background-color:#E1F4F9;font-size:16px;height:32px;line-height:32px;padding-left:15px;padding-right:15px;}
#fetch-msg-tip .dialog-content{min-height:65px;padding:15px 20px;line-height:35px;}
#fetch-msg-tip .dialog-handler{text-align:center;}
#fetch-msg-tip .dialog-handler button{background-color:#00B7EB;color:white;outline:none;border-radius:3px;cursor:pointer;height:30px;width:100px;border:none}
#fetch-msg-tip .dialog-handler button:hover{background-color:#38A7DF;}
#fetch-err-tip .dialog-title{height:28px;position:relative;}
#fetch-err-tip .dialog-title .close-btn{position:absolute;font-size:28px;font-weight:100;height:25px;line-height:20px;right:12px;top:5px;color:#999;text-decoration:none;}
#fetch-err-tip .dialog-title .close-btn:hover{color:#ababab;}
#fetch-err-tip .dialog-content{padding-left:65px;padding-right:25px;}
#fetch-err-tip .content-text{display:inline-block;word-break:break-word}
#fetch-err-tip .dialog-content .seenewIconfont{position:absolute;left:24px;top:-8px;color:#F7594F;font-size:26px;}

#fetch-err-tip .icon-shibai,#fetch-msg-tip .icon-shibai{
  position:absolute;
  left:15px;
  top:21px;
}

#fetch-loading-cover{
  position:fixed;left:0;top:0;margin:auto;right:0;bottom:0;z-index:999989;background-color:rgba(0,0,0,0);transition:background-color 1s ease 0s;
}
#fetch-loading-cover:after{
    animation:fetch-loading-cover 1s linear infinite;
    position: absolute;
    content:'';
    width:50px;
    height:50px;
    left:0;right:0;top:0;bottom:0;margin:auto;
    border-left:3px solid #00B7EB;border-right:3px solid #00B7EB;border-bottom:3px solid #00B7EB;border-top:3px solid transparent;
    border-radius:50%;
    transition:all .5s linear 0s;
    opacity: 0;
}
#fetch-loading-cover:before{
    content:'正在拼命加载中…';
    position: absolute;
    white-space: nowrap;
    left:0;right:0;top:0;bottom:0;margin:auto;
    line-height:25px;height:25px;width:135px;text-align:center;
    transform:translateY(48px);color:#00B7EB;font-size:14px;transition:all .5s linear 0s;opacity:0;
}
#fetch-loading-cover.runAnt:after,#fetch-loading-cover.runAnt:before{opacity:1;}
}