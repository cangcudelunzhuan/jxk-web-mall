.preview_dialog
  position: fixed
  z-index: 800
  width:100%
  height:100%
  left:0
  top:0
  background-color:rgba(0,0,0,.7)

.preview_close
  width:30px
  height:30px
  text-align: center
  line-height: 27px
  cursor:pointer
  background-color:white
  color:#333
  position:absolute
  right:20px
  top:20px
  border-radius:50%
  font-size: 26px
  transition: all 0.4s ease 0s
  &:hover
    transform: rotate(360deg)

.preview_imgs
  width:100%
  vertical-align:top

.preview_ol
  margin-left:auto
  margin-right:auto
  overflow-y:auto
  height:100vh
  display: flex
  flex-wrap:wrap
  align-items: center
  justify-content: center

.preview_items
  width:100%

.preview_zoom_in
  cursor: zoom-in

.preview_zoom_out
  cursor: zoom-out