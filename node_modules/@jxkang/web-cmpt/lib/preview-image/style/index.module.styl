.images_wraper
  img
    width:100%

.items
  position:relative
  figure
    margin:0

.handler_box
  position:absolute
  width:23px
  right:-23px
  top:0
  display: none
  
  >span
    cursor pointer
    background-color:#1890FF
    color:white
    font-size:12px
    display:inline-block
    width:100%
    height:23px
    line-height:23px
    overflow:hidden
    margin-bottom:3px
    text-align: center
    vertical-align: middle
    &:first-child
      transform: rotate(180deg)
    &.disabled
      background-color:#DCDCDC
      cursor:default

  span:nth-of-type(2)
    font-size:18px
    line-height:20px

.items:hover .handler_box
  display:block


