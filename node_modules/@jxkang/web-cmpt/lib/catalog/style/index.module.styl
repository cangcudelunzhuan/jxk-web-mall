.item_box
  border:1px solid #D9D9D9
  border-radius:4px
  margin-left:20px
  margin-right:20px
  position:relative

  h3
    font-size: 14px
    font-weight: bold
    margin:0
    padding-left:10px
    padding-right:10px
    height:38px
    line-height: 38px
    color:#333
    border-bottom:1px solid #D9D9D9

  ul
    padding:0
    margin:0

.list_item
  list-style none
  span
    display:block
    color:#666
    height:32px
    line-height: 32px
    padding-left:10px
    padding-right:10px
    cursor: pointer
    text-overflow: ellipsis
    white-space: nowrap
    overflow:hidden

.right_icon
  position:absolute
  right:-22px
  top:48%
  color:#999

.list_ul
  height:230px
  overflow-y:auto

.catalog_code
  padding-right:7px

.theme_blue
  .list_item:hover span,.current span
    background-color:rgba(24,144,255,.1)
    color:#1890FF

.theme_red
  .list_item:hover span,.current span
    background-color:rgba(249,82,46,.1)
    color:#f9512e

.theme_purple
  .list_item:hover span,.current span
    background-color:rgba(124,87,228,.1)
    color:#7c57e4
