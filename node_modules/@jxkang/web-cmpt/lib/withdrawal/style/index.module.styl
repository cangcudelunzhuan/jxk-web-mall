.remark_tip
  color:#999
  margin-top:10px
  margin-bottom:20px

.h3
  font-size: 18px

.bank_items
  background-color: #F5F5F5
  border-radius: 6px
  padding:12px 10px 12px 60px
  position relative
  margin-top:10px

.bank_icon
  position: absolute
  background-color: white
  border-radius: 4px
  width:34px
  height:27px
  left:10px
  top:22px
  &:before
    content: ''
    height:3px
    border-radius: 3px 3px 0 0
    background-color: #FA4734
    position:absolute
    width:26px
    left:4px
    top:6px
    box-shadow: 0 0 3px #FA4734
  span
    display: block
    background-color: #FA4734
    border-radius: 0 0 3px 3px
    width:26px
    height:12px
    margin-top:11px
    margin-left:auto
    margin-right:auto
    box-shadow: 0 0 3px #FA4734
    &:after,&:before
      width:50%
      height:1px
      background-color:white
      content:''
      position:absolute
      left:6px
    &:after
      bottom:8px  
    &:before
      bottom:11px

.bank_name
  font-weight: bold
  font-size: 18px
  color:#333

.card_no
  color:#666

.checkbox
  position:absolute
  right:15px
  top:25px

.procedures
  margin-top:20px
  color: #888

.cut_num
  margin-left:7px
  color:#333
  font-weight: bold