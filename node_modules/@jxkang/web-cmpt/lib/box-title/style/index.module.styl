.title_wraper
  position relative
  &:after
    content:''
    clear both
    display:block
    height:0;
    overflow:hidden

.title
  font-size: 16px
  font-weight: bold
  color:#333
  padding-left:12px
  display: inline-block

  &:before
    content:'\20'
    width:4px
    height:14px
    position: absolute
    top:50%
    left:0
    margin-top:-7px

.theme_blue
  &:before
    background-color:#1890FF

.theme_red
  &:before
    background-color:#f9512e

.theme_purple
  &:before
    background-color:#7D57E4

.extra
  float: right